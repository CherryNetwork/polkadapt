{
  "name": "polkadapt",
  "version": "0.0.0",
  "scripts": {
    "preinstall": "cd projects/core && npm i && cd .. && ng build core && cd substrate-rpc && npm i && cd .. && ng build substrate-rpc && cd polkascan && npm i && cd .. && ng build polkascan",
    "postinstall": "concurrently \"npm run link_substrate-rpc\" \"npm run link_polkascan\"",
    "link_substrate-rpc": "cd projects/substrate-rpc/node_modules/@polkadapt && rm -rf core && ln -s ../../../../dist/core",
    "link_polkascan": "cd projects/polkascan/node_modules/@polkadapt && rm -rf core && ln -s ../../../../dist/core",
    "ng": "ng",
    "start": "npm run watch",
    "build": "ng build core && concurrently \"ng build substrate-rpc\" \"ng build polkascan\"",
    "watch": "ng build core && concurrently \"ng build substrate-rpc --watch\" \"ng build polkascan --watch\" \"sleep 20 && ng build core --watch\"",
    "test": "ng test",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/compiler": "~11.0.5",
    "@angular/core": "~11.0.5",
    "@angular/platform-browser": "~11.0.5",
    "@angular/platform-browser-dynamic": "~11.0.5",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.5",
    "@angular/cli": "~11.0.5",
    "@angular/compiler-cli": "~11.0.5",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "concurrently": "^5.3.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.1.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.0.2",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}
